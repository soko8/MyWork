<?xml version="1.0" encoding="UTF-8"?>
<!-- Struts 配置文件的文件头，包含DTD 等信息 -->
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">  
<!--Struts 配置文件的根元素 --> 
<struts-config>  
    <!--配置所有的ActionForm -->  
    <form-beans>  
        <!--配置第一个ActionForm，指定ActionForm的name 和type 属性 -->
        <form-bean name="LogForm" type="my.test.actionForm.LoginForm" />
        <form-bean name="loopValidatorForm" type="my.test.actionForm.IteratorValidateForm" />
    </form-beans>  
    <!--配置全局Forward对象 -->  
    <global-forwards>  
        <!--该Forward对象的name 属性为error. 映射资源为/WEB-INF/jsp/error.jsp -->
        <forward name="error" path="/WEB-INF/jsp/error.jsp" />  
    </global-forwards>  
    <!--此处配置所有的Action 映射-->  
    <action-mappings>
        <!--配置Action 的path. type 属性name 属性配置Action 对应的ActionForm-->
        <action 
        	path="/login" 
        	type="my.test.action.LoginAction" 
        	name="LogForm" 
        	input="/WEB-INF/jsp/login.jsp" 
        	validate="true" 
        	scope="request">
            <!--还配置了两个局部Forward. 这两个局部Forward仅对该Action有效-->
            <forward name="success" path="/WEB-INF/jsp/loopValidate.jsp" />
        </action>
        
        <action 
        	path="/loopValidate" 
        	type="my.test.action.IteratorValidateAction" 
        	name="loopValidatorForm" 
        	input="/WEB-INF/jsp/loopValidate.jsp"
        	validate="true" 
        	scope="session">
            <!--还配置了两个局部Forward. 这两个局部Forward仅对该Action有效-->
            <forward name="success" path="/WEB-INF/jsp/loopValidate.jsp" />
        </action>
    </action-mappings>
    <message-resources parameter="messages" />
  	
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    	<set-property property="pathnames" value="/org/apache/struts/validator/validator-rules.xml, /WEB-INF/validation.xml"/>
    </plug-in>
</struts-config> 